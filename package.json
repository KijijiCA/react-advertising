{
    "name": "react-prebid",
    "version": "1.1.0",
    "description": "Library for ad placements with Prebid header bidding in React applications",
    "main": "index.js",
    "esnext": "index-esnext.js",
    "files": [
        "src/",
        "index.js",
        "index-esnext.js"
    ],
    "scripts": {
        "test": "jest",
        "watch": "webpack --watch",
        "build": "NODE_ENV=production webpack",
        "eslint": "eslint '**/*.js'",
        "prettier": "prettier '**/*.js' --write",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "eslint --fix",
                "git add",
                "jest --bail --findRelatedTests"
            ]
        },
        "ignore": [
            "index.js"
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/src/utils/setupTests.js"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(@mt-testutils)/)"
        ],
        "testEnvironmentOptions": {
            "url": "http://www.motor-talk.de/"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technology-ebay-de/react-prebid.git"
    },
    "author": "Patrick Hund <pahund@team.mobile.de>",
    "license": "MIT",
    "peerDependencies": {
        "react": ">=16.3.0 <17.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@mt-testutils/expect-snapshot": "^1.0.5",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.8.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "chai": "^4.2.0",
        "chai-enzyme": "^1.0.0-beta.1",
        "check-prop-types": "^1.1.2",
        "coveralls": "^3.0.3",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.1",
        "eslint": "^5.16.0",
        "eslint-config-motor-talk": "^5.0.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "lint-staged": "^8.1.7",
        "prettier": "^1.17.1",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-test-renderer": "^16.8.6",
        "regenerator-runtime": "^0.13.2",
        "sinon": "^7.3.2",
        "sinon-chai": "^3.3.0",
        "webpack": "^4.32.1",
        "webpack-cli": "^3.3.2"
    },
    "dependencies": {
        "fast-deep-equal": "^2.0.1"
    }
}
