{
    "name": "react-prebid",
    "version": "3.0.0-beta.0",
    "description": "Library for ad placements with Prebid header bidding in React applications",
    "main": "lib/index.js",
    "unpkg": "dist/react-prebid.min.js",
    "esnext": "src/index.js",
    "files": [
        "src/",
        "lib/",
        "dist/"
    ],
    "scripts": {
        "test": "jest",
        "watch": "webpack --watch",
        "build": "npm run build:lib && npm run build:dist",
        "build:lib": "cross-env BABEL_ENV=cjs babel --out-dir lib src --ignore src/*.test.js,src/**/*.test.js",
        "build:dist": "webpack",
        "eslint": "eslint 'src/**/*.js'",
        "prettier": "prettier 'src/**/*.js' --write"
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "eslint --fix",
                "git add",
                "jest --bail --findRelatedTests"
            ]
        },
        "ignore": [
            "index.js"
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/src/utils/setupTests.js"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(@mt-testutils)/)"
        ],
        "testEnvironmentOptions": {
            "url": "http://www.motor-talk.de/"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technology-ebay-de/react-prebid.git"
    },
    "author": "Patrick Hund <pahund@team.mobile.de>",
    "license": "MIT",
    "peerDependencies": {
        "react": ">=16.3.0 <17.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@mt-testutils/expect-snapshot": "^1.0.5",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "chai": "^4.2.0",
        "chai-enzyme": "^1.0.0-beta.1",
        "check-prop-types": "^1.1.2",
        "coveralls": "^3.0.9",
        "cross-env": "^6.0.3",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^5.16.0",
        "eslint-config-motor-talk": "^5.0.1",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "husky": "^2.7.0",
        "jest": "^24.9.0",
        "lint-staged": "^8.2.1",
        "prettier": "^1.19.1",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-test-renderer": "^16.12.0",
        "regenerator-runtime": "^0.13.3",
        "sinon": "^7.5.0",
        "sinon-chai": "^3.4.0",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {
        "fast-deep-equal": "^2.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
